@using EntityLayer.Concrete
@model List<Heading>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string color = "";}
@{int count = 0; }

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
            <!-- Content Header (Page header) -->
            <!-- Main content -->
            <section class="content">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Heading Processes</h1>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped projects">
                            <thead>
                                <tr>
                                    <th style="width: 5%">
                                        #
                                    </th>
                                    <th style="width: 25%">
                                        Title Name
                                    </th>
                                    <th style="width: 1%;">
                                        Writer
                                    </th>
                                    <th style="width: 45%" class="text-center">
                                        Category
                                    </th>
                                    <th style="width: 20%">
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    if(item.Category.CategoryName == "Tiyatro")
                                    {
                                        color = "badge badge-success";
                                    }
                                    else if(item.Category.CategoryName == "Spor")
                                    {
                                        color = "badge badge-warning";
                                    }
                                    else if (item.Category.CategoryName == "Eğitim")
                                    {
                                        color = "badge badge-info";
                                    }
                                    else if (item.Category.CategoryName == "Kitap")
                                    {
                                        color = "badge badge-dark";
                                    }
                                    else if (item.Category.CategoryName == "Dizi")
                                    {
                                        color = "badge badge-secondary";
                                    }
                                    else if (item.Category.CategoryName == "Film")
                                    {
                                        color = "badge badge-primary";
                                    }
                                <tr>
                                    <th>
                                        @(count+=1)
                                    </th>
                                    <td>
                                        <a>
                                            @item.HeadingName
                                        </a>
                                        <br />
                                        <small>
                                            @(((DateTime)item.HeadingDate).ToString("dd-MM-yyyy"))
                                        </small>
                                    </td>
                                    <td style="vertical-align: middle; text-align: center;">
                                        <!-- Hücre hizalaması -->
                                        <div style="display: flex; flex-direction: column; align-items: center; justify-content: center;">
                                            <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage" />
                                            <p><b>@(item.Writer.WriterName + " " + item.Writer.WriterSurname)</b></p>
                                        </div>
                                    </td>

                                    <td class="project-state">
                                        <span class="@color">@item.Category.CategoryName</span>
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="Content/ContentByHeading/@item.HeadingID">
                                            <i class="fas fa-folder">
                                            </i>
                                            Contents
                                        </a>
                                        <a class="btn btn-info btn-sm" href="#">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Edit
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="#">
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </section>
</body>
</html>
