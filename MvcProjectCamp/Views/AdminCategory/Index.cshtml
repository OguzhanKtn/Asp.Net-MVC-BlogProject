@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{int count = 0; }
<br />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Titles</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <th>@(count+=1)</th>
            <td>@item.CategoryName</td>
            <td>
                <a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Delete</a>
            </td>
            <td>
                <a href="/AdminCategory/UpdateCategory/@item.CategoryID" class="btn btn-success">Update</a>
            </td>
            <td>
                <a href="/AdminCategory/Titles/@item.CategoryID" class="btn btn-primary">Titles</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-info">Add Category</a>

